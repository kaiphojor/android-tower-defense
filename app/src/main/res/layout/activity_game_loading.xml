<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_game_loading"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameLoadingActivity">

    <ImageView
        android:id="@+id/iv_game_loading"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/background_dot" />

    <ProgressBar
        android:id="@+id/pb_game_loading"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:maxHeight="80dip"
        android:minHeight="70dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/iv_game_loading" />

    <TextView
        android:id="@+id/tv_game_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="타워 세우는 중...."
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/pb_game_loading"
        app:layout_constraintEnd_toEndOf="@+id/pb_game_loading"
        app:layout_constraintStart_toStartOf="@+id/pb_game_loading"
        app:layout_constraintTop_toTopOf="@+id/pb_game_loading" />
</androidx.constraintlayout.widget.ConstraintLayout>