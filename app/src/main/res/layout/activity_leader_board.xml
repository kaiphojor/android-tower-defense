<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_leader_board"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeaderBoardActivity">

    <LinearLayout
        android:id="@+id/navigation_ll_leader_board"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title_tv_leader_board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:paddingStart="30dp"
            android:text="리더보드"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/username_tv_leader_board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="사용자이름"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/gem_iv_leader_board"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            app:srcCompat="@drawable/diamond" />

        <TextView
            android:id="@+id/gem_number_tv_leader_board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="100"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/buy_gem_iv_leader_board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            app:srcCompat="@drawable/plus_32" />

    </LinearLayout>

    <TableLayout
        android:id="@+id/tl_leader_board"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navigation_ll_leader_board"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.8">

        <TableRow
            android:id="@+id/item_row_leader_board"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/rank_tv_leader_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="RANK"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/nick_name_tv_leader_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:text="닉네임"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/star_level_tv_leader_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="별 레벨"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/total_clear_time_tv_leader_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="총 진행 시간"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:id="@+id/rank_1_row_leader_board"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/rank_1_tv_leader_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="1"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/rank_1_nick_name_tv_leader_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:text="닉네임1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/rank_1_star_level_tv_leader_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="4"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/rank_1_total_clear_time_tv_leader_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="0:30:23"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:id="@+id/rank_2_row_leader_board"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/rank_2_tv_leader_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="2"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/rank_2_nick_name_tv_leader_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:text="닉네임2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/rank_2_star_level_tv_leader_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="3"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/rank_2_total_clear_time_tv_leader_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="0:30:25"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:id="@+id/rank_3_row_leader_board"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/rank_3_tv_leader_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="3"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/rank_3_nick_name_tv_leader_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:text="닉네임3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/rank_3_star_level_tv_leader_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="2"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/rank_3_total_clear_time_tv_leader_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="0:30:27"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:id="@+id/skip_row_leader_board"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/rank_tv_leader_board5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="..."
                android:textSize="36sp" />

            <TextView
                android:id="@+id/nick_name_tv_leader_board5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:text="..."
                android:textSize="36sp" />

            <TextView
                android:id="@+id/star_level_tv_leader_board5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="..."
                android:textSize="36sp" />

            <TextView
                android:id="@+id/total_clear_time_tv_leader_board4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="..."
                android:textSize="36sp" />

        </TableRow>

        <TableRow
            android:id="@+id/my_rank_row_leader_board"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/my_rank_tv_leader_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="내 랭크"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/my_rank_nick_name_tv_leader_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:gravity="center_horizontal|center_vertical"
                android:text="내 닉네임"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/my_rank_star_level_tv_leader_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="0"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/my_rank_total_clear_time_tv_leader_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="0:00:00"
                android:textSize="24sp" />
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>