<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_ll_crash_log"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_layout"
    android:orientation="horizontal"
    app:layout_anchorGravity="clip_horizontal">

    <TextView
        android:id="@+id/number_tv_crash_log"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingEnd="5dp"
        android:text="번호"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/time_tv_crash_log"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="0"
        android:textAlignment="center" />

    <LinearLayout
        android:id="@+id/content_ll_crash_log"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="4"
        android:orientation="vertical"
        android:paddingStart="5dp"
        android:paddingEnd="5dp">

        <TextView
            android:id="@+id/description_tv_crash_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="삼도수군통제사" />

        <TextView
            android:id="@+id/stack_trace_tv_crash_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/edit_round"
            android:ellipsize="end"
            android:maxLines="4"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="메모" />
    </LinearLayout>

    <Button
        android:id="@+id/delete_bt_crash_log"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0"
        android:text="삭제" />
</LinearLayout>