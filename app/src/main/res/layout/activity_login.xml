<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/navigation_ll_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title_tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:paddingStart="30dp"
            android:text="로그인"
            android:textSize="36sp" />

        <ImageView
            android:id="@+id/profile_iv_login"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:visibility="invisible"
            tools:srcCompat="@tools:sample/avatars[0]" />

        <TextView
            android:id="@+id/nickname_tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="user00001"
            android:textSize="24sp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/gem_iv_login"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:visibility="invisible"
            app:srcCompat="@drawable/diamond" />

        <TextView
            android:id="@+id/gem_number_tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="100"
            android:textSize="25sp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/buy_gem_iv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:visibility="invisible"
            app:srcCompat="@drawable/plus_32" />

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_divider_gl_log_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <LinearLayout
        android:id="@+id/sign_in_ll_login"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/vertical_divider_gl_log_in"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navigation_ll_login"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.3">

        <TextView
            android:id="@+id/sign_in_tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:text="로그인 하기"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/sign_in_email_et_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="email 입력하세요"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/sign_in_password_et_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="password 입력하세요"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/sign_in_bt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="로그인" />

        <Button
            android:id="@+id/google_sign_in_bt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/blue_tile"
            android:text="구글 로그인" />
    </LinearLayout>
    <!--            common_google_signin_btn_text_light_focused-->

    <LinearLayout
        android:id="@+id/sign_up_ll_login"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="@+id/vertical_divider_gl_log_in"
        app:layout_constraintTop_toBottomOf="@+id/navigation_ll_login"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.3">

        <TextView
            android:id="@+id/sign_up_tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:text="회원가입 하기"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/sign_up_email_et_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="email 입력하세요"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/sign_up_password_et_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="password 입력하세요"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/sign_up_bt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="회원가입" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>